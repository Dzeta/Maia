<%= render 'new_debate_modal' %>


<div class="row">
<div class="span6">
<h3>Public Debates</h3>
</div>
<div class="span6">

<button class="btn btn-large btn-info pull-right" type="button" data-toggle="modal" 
data-target="#createModal">
	Create a new Public Debate</button>
</div>
</div>

<div class="row">
    <div class="span5">

<div class="row">
	<div class="span4">
	<form class="form-search">
	<div class="input-append">
	<input type="text" class="span3 search-query" placeholder="General terms of search..." name="search" id="search">
	<button type="submit" class="btn">Search</button>
	</div>
	</form>
	</div>
</div>

<div class="row">
	<div class="span3">
	<div class="panel panel-primary">
	<table class="table">
  	<% @tags.each do |tag|%>
  	<tr>
       	<td><input type="checkbox" class="checkbox"/>    <%= tag%></td>
  	</tr>
  	<% end %>
	</table>
	</div>
	</div>
</div>
	</div>

    <div class="span7">
	<h2> <b>Hot debates this month</b> </h2>
	<% @hot_debates.each do |deb| %>
<dl>
  <dt><%= link_to deb.description, deb %></dt>
  <dd><% if !deb.tags.nil? %>
  	<% deb.tags.each do |tag| %>
  		<%= tag.name + " " %>
  	<% end %>
  <% end %></dd>
</dl>
	<% end %>

	<h2> <b>Recent debates </b></h2>
	<% @recent_debates.each do |deb| %>
<dl>
  <dt><%= link_to deb.description, deb %></dt>
  <dd><% if !deb.tags.nil? %>
  	<% deb.tags.each do |tag| %>
  		<%= tag.name + " " %>
  	<% end %>
  <% end %></dd>
</dl>
	<% end %>

</div>



<div class="row">
    <div class="span12">
</br>
	<h2> Results: </h2>
	<div class="panel panel-primary">
  <%= will_paginate %>
	<table class="table table-hover" id="results">
  <% @debates.each do |debate| %>
  	<tr>
       	<td><%= link_to debate.description, debate %></td>
	</tr>
  <% end %>
	</table>
  <%= will_paginate %>
	</div>
	</div>
</div>







